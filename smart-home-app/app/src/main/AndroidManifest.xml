<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itba.hci.smarthome">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <permission android:name="android.permission.INTERNET" />
    <permission android:name="android.permission.GET_ACCOUNTS" />
    <permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".core.SmartHomeApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustResize">
        <activity android:name=".view.activity.DevicesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.NewDeviceActivity"/>
        <activity android:name=".view.activity.RoutinesActivity"/>
        <activity android:name=".view.activity.EditDeviceActivity"/>
        <activity android:name=".view.activity.BlindsActivity"/>
        <activity android:name=".view.activity.AcActivity"/>
        <activity android:name=".view.activity.OvenActivity" />
        <activity android:name=".view.activity.AlarmActivity" />
        <activity android:name=".view.activity.DoorActivity" />
        <activity android:name=".view.activity.LampActivity" />
        <activity android:name=".view.activity.DeleteDeviceActivity" />
        <activity android:name=".view.activity.DeleteRoutineActivity" />

    </application>

</manifest>